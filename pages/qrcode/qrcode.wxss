.qrcode-box {
  margin: 50rpx 0;
  width: 650rpx;
  height: 650rpx;
  border: 1px solid #eee;
  box-sizing: border-box;
}

.qrcode-box .qrcode-image {
  margin: 25rpx;
  width: 600rpx;
  height: 600rpx;
  background-color: #f1f1f1;
}

.coutent-text {
  padding: 0 50rpx;
  width: 100%;
  box-sizing: border-box;
}

.coutent-text .text-input {
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #ccc;
}

.button-generat {
  margin: 50rpx 0;
  padding: 0 50rpx;
  width: 100%;
  box-sizing: border-box;
}
