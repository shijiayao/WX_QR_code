/* 头部样式 */
.index-header {
  width: 100%;
  height: 100rpx;
}

/* 主体样式 */
.index-content {
  width: 100%;
  height: 100%;
}

.index-content .menu-item {
  float: left;
  margin: 0 0 0 50rpx;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
  box-sizing: border-box;
  border: 1px solid #ccc;
}

.index-content .menu-item:nth-child(n + 3) {
  margin: 50rpx 0 0 50rpx;
}
